<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.coin.landlord_menu">

    <RelativeLayout
        android:layout_width="366dp"
        android:layout_height="475dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="14dp">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="44dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/searchView"
            android:layout_marginStart="44dp" />

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/searchView"
            android:layout_below="@+id/searchView"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/stat_sys_upload"
            android:backgroundTint="#FF09FF36"
            android:text="刊登職缺"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/button15"
            android:layout_below="@+id/button15"
            android:layout_marginTop="45dp"
            android:background="@android:drawable/stat_notify_chat"
            android:backgroundTint="#FFFFDCFA"
            android:text="即時溝通"
            android:textSize="24sp" />

        <Button
            android:id="@+id/stu_person"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/editText5"
            android:layout_alignTop="@+id/button15"
            android:layout_marginEnd="29dp"
            android:background="@android:drawable/btn_radio"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:text="管理功能"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button18"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/stu_person"
            android:layout_alignStart="@+id/stu_person"
            android:layout_alignTop="@+id/button16"
            android:background="@android:drawable/ic_search_category_default"
            android:backgroundTint="#FF91A5FB"
            android:text="求才"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button20"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/button16"
            android:layout_below="@+id/button16"
            android:layout_marginTop="35dp"
            android:background="@android:drawable/ic_dialog_info"
            android:backgroundTint="@color/colorAccent"
            android:text="人氣評價"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button23"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/button18"
            android:layout_alignTop="@+id/button20"
            android:background="@android:drawable/btn_star_big_on"
            android:text="群組"
            android:textSize="24sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
