<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.coin.landlord_menu">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    </FrameLayout>

    <LinearLayout
        android:layout_width="576dp"
        android:layout_height="134dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="127dp">

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="612dp"
        android:layout_height="776dp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="321dp">

        <Button
            android:id="@+id/stu_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="63dp"
            android:text="職缺"
            android:textSize="18sp" />

        <Button
            android:id="@+id/stu_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/button21"
            android:text="個人"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stu_person"
            android:layout_marginStart="11dp"
            android:layout_marginTop="51dp"
            android:layout_toEndOf="@+id/stu_person"
            android:text="群組"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_job"
            android:layout_alignBottom="@+id/stu_job"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="33dp"
            android:text="PO職缺"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button19"
            android:layout_alignStart="@+id/stu_job"
            android:layout_marginBottom="7dp"
            android:text="即時通訊"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
